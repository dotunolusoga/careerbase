!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title CareerBase
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %body
    %header
    #container
      %nav
        %ul
          %li.logo CareerBase
          - if !logged_in?
            - unless controller_name == "users"
              %li.rightNav= link_to "Sign Up", new_user_path
            - unless controller_name == "user_sessions"
              %li.rightNav= link_to "Sign In", new_user_session_path
          - else
            %li= link_to "Add a company", new_company_path
            %li= link_to "List current companies", new_company_path
            %li.rightNav= link_to "Sign Out", user_session_path, method: :delete
    %p.notice= notice
    %p.alert= alert
    = yield
